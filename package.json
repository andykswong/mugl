{
  "name": "mugl",
  "version": "0.0.1",
  "description": "Micro WebGL library",
  "homepage": "https://github.com/andykswong/mugl",
  "author": "Andy K.S. Wong <andykswong@outlook.com>",
  "license": "MIT",
  "keywords": [
    "3d",
    "canvas",
    "html5",
    "javascript",
    "typescript",
    "webgl",
    "webgl2"
  ],
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/mugl.min.js"
  },
  "files": [
    "/dist",
    "/src"
  ],
  "scripts": {
    "prepublishOnly": "npm run build && npm test",
    "clean": "rimraf coverage dist node_modules",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "prebuild": "npm run lint",
    "build": "tsc",
    "postbuild": "npm run build:bundle",
    "build:bundle": "webpack",
    "build:examples": "webpack --config webpack.examples.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "doc": "typedoc --out docs src/index.ts",
    "examples": "cross-env NODE_ENV=development webpack serve --config webpack.examples.js",
    "start": "npm run examples"
  },
  "dependencies": {},
  "devDependencies": {
    "@automattic/webpack-inline-constant-exports-plugin": "^1.0.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/webgl-ext": "0.0.32",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "copy-webpack-plugin": "^8.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.10.0",
    "gl-matrix": "^3.3.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "source-map-loader": "^2.0.0",
    "ts-essentials": "^7.0.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "typedoc": "^0.20.24",
    "typescript": "^4.1.3",
    "webpack": "^5.27.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "rootDir": "src",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
