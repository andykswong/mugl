{
  "extends": "assemblyscript/std/portable.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "module": "esnext",
    "target": "es2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true, 
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/assemblyscript/std/types",
      "assembly"
    ],
    "types": [
      "portable",
      "jest"
    ],
    "lib": [
      "es2021",
      "dom",
      "webworker"
    ],
    "rootDir": "js",
    "outDir": "dist"
  },
  "include": [
    "js/**/*.ts"
  ]
}
